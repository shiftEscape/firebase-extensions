{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
